        <div class="container">
            <div class="row">
                <div class="col-8">
                    <h1>Even Voorstellen</h1>
                    <span>@Html.DisplayFor(model => model.Intro) </span>
                </div>
                <div class="col-4">
                    <img src="~/img/@Html.DisplayFor(model => model.Foto)" style="max-height: 300px;">
                    <h1>@Html.DisplayFor(model => model.Name)</h1>
                </div>
            </div>
        </div>
    </div>
