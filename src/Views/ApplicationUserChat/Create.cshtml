@model ApplicationUserChat

@{
    ViewData["Title"] = "Create";
}

<h1>Aanmaken</h1>

<h4>ApplicationUserChat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserChatStatus" class="control-label"></label>
                @* <input asp-for="ApplicationUserChatStatus" class="form-control" /> *@
                <select asp-for="ApplicationUserChatStatus" class="form-control">
                    <option value="pending">Bezig met Behandelen</option>
                    <option value="active">Actief</option>
                    <option value="declined">Weiger</option>
                    <option value="blocked">Blokkeer</option>
                </select>
                @* <span asp-validation-for="ApplicationUserChatStatus" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="ChatId" class="control-label"></label>
                <select asp-for="ChatId" class="form-control" asp-items="ViewBag.ChatId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar de lijst</a>
</div>
